<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-5">
            <div class="card-body">
                <h3 class="lead text-center">edit Note</h3>
                <form action="/notes/updated/{{note._id}}?_method=PUT" method="post">
                  <div class="form-group">
                      <input type="text" value={{note.title}} name="title" placeholder="title" class="form-control" autofocus>
                  </div>
                   <div class="form-group">
                       <textarea name="description" placeholder="description" class="form-control" rows="4">{{note.description}}</textarea>
                  </div>
                  <button class="btn btn-dark btn-block">edit Note</button>
                </form>
            </div>
        </div>
    </div>
</div>